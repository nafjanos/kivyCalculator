<CalcLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        TextInput:
            id: input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, .15)
        Label:
            id: expression
            text: ''
            halign: "right"
            font_size: 16
            color : (.1, .1, .1, 1)
            size_hint: (1, .10)
            canvas.before:
                Color:
                    rgba: (250/255, 218/255, 130/255,1)
                Rectangle:
                    pos: self.pos
                    size: self.width, self.height



        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear()
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "CE"
                id: clear
                on_press: root.remove()
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.operator_press('/')

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('7')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('8')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('9')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_press: root.operator_press('*')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('4')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('5')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('6')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_press: root.operator_press('-')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('1')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('2')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('3')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.operator_press('+')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.flip_sign()
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.add_digit('0')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.dot_press()
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                background_color: (166/255, 95/255, 83/255, 1)
                on_press: root.equals()



        